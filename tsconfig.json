{
  "exclude": [
    "node_modules",
    "lib",
    "./src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "lib/esm",
    "plugins": [ { "name": "typescript-tslint-plugin" } ],
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "module": "ES2020",
    "target": "es6"
  },
  "typedocOptions": {
      "entryPoints": [
        "./src/index.ts"
      ],
      "out": "./homepage/dist/docs"
  },
  "include": [
    "./src/**/*.ts"
  ]
}
